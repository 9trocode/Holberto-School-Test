<!-- Page Content  -->
<div class="iq-card-body">
  <%= form_with(model: library_location, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :library_location_name, required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :city %>
      <%= form.text_field :city, id: :library_location_city, required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :ref %>
      <%= form.text_field :ref, id: :library_location_ref, required: true, class: 'form-control', disable: true %>
    </div>
    <div class="form-group">
      <%= form.label :location_desc %>
      <%= form.text_area :location_desc, id: :location_desc, required: true, class: 'form-control', rows: 4 %>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= form.submit class: "btn btn-primary" %>
    <button type="reset" class="btn btn-danger">Reset</button>
  <% end %>
</div>