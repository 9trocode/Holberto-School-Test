<!-- Page Content  -->
<div id="content-page" class="content-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-12">
        <div class="iq-card">
          <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
              <h4 class="card-title">Libary Lists</h4>
            </div>
            <div class="iq-card-header-toolbar d-flex align-items-center">
              <a href="<%= new_library_location_path %>" class="btn btn-primary text-white">Add New Library</a>
            </div>
          </div>
          <div class="iq-card-body">
            <div class="table-responsive">
              <table class="data-tables table table-striped table-bordered" style="width:100%">
                <thead>
                <tr>
                  <th width="10%">Name</th>
                  <th width="10%">City</th>
                  <th width="10%">Reference</th>
                  <th width="55%">Location Desc</th>
                  <th width="10%">Action</th>
                </tr>
                </thead>
                <tbody>
                <% @library_location.each do |library_location| %>
                  <tr>
                    <td><%= library_location.name %></td>
                    <td><%= library_location.city %></td>
                    <td><%= library_location.ref %></td>
                    <td>
                      <p class="mb-0"><%= library_location.location_desc %></p>
                    </td>
                    <td>
                      <div class="flex align-items-center list-user-action">
                        <a class="bg-primary text-white" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="<%= edit_library_location_path(library_location) %>"><i class="las la-edit"></i></a>
                        <%= link_to library_location, method: :delete, data: { confirm: 'Are you sure?' }, class:"bg-primary text-white" do %>
                          <i class="las la-trash-alt"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>