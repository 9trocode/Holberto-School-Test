          <div class="iq-card-body">
            <%= form_with(model: libary_location, local: true) do |form| %>
              <% if libary_locations.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(libary_locations.errors.count, "error") %> prohibited this libary_locations from being saved:</h2>

                  <ul>
                    <% libary_locations.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, id: :libary_location_name, required: true, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= form.label :city %>
                <%= form.text_field :city, id: :libary_location_city, required: true, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= form.label :location_desc %>
                <%= form.text_area :location_desc, id: :location_desc, required: true, class: 'form-control', rows: 4 %>
              </div>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

              <%= form.submit class: "btn btn-primary" %>
              <button type="reset" class="btn btn-danger">Reset</button>
            <% end %>
          </div>